server {
	listen   127.0.0.1:80;
	server_name  localhost;

	access_log  /var/log/nginx/localhoststatus.access.log;

	location /nginx_status {
		stub_status on;
		# do not log every access, collectd is doing one per minute.
		access_log   off;
		# allow local collectd
		allow 127.0.0.1;
		deny all;
	}
}
