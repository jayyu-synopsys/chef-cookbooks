Hostname <%= node['hostname'] %>

Interval 60

LoadPlugin syslog

LoadPlugin cpu
LoadPlugin disk
LoadPlugin interface
LoadPlugin load
LoadPlugin memory
LoadPlugin network
LoadPlugin processes
LoadPlugin swap
LoadPlugin uptime
LoadPlugin write_graphite
<% if @graphite['postgresql'] -%>
LoadPlugin postgresql

<Plugin postgresql>
  <Database "<%= @graphite['postgresql'] %>">
    Host "localhost"
    Port "5432"
    User "postgres"
  </Database>
</Plugin>
<%- end -%>

<Plugin write_graphite>
  <Node "<%= @graphite['host'] %>">
    Host "<%= @graphite['host'] %>"
    Port "2003"
  </Node>
</Plugin>
