server {
    listen  0.0.0.0:80;
    server_name critiquebrainz.musicbrainz.org critiquebrainz.org;

    access_log /var/log/nginx/critiquebrainz.access.log;
    error_log  /var/log/nginx/critiquebrainz.error.log notice;

    location / {
        include uwsgi_params;
        uwsgi_pass unix:/tmp/cb.server.uwsgi.sock;
    }

    location /static {
        root /home/critiquebrainz/critiquebrainz/critiquebrainz/frontend;
        gzip on;
        gzip_http_version 1.0;
        gzip_comp_level 6;
        gzip_proxied any;
        gzip_types text/plain text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
        # make sure gzip does not lose large gzipped js or css files
        # see http://blog.leetsoft.com/2007/7/25/nginx-gzip-ssl
        gzip_buffers 16 8k;
    }
}
