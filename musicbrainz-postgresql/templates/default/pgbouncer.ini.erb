[databases]
<% node['postgresql']['databases'].each do |database| %>
<%= database[:name] %> = host=127.0.0.1 dbname=<%= database[:name] %> pool_size=50
<% end %>

[pgbouncer]
pidfile=<%= node['postgresql']['data_directory'] %>/pgbouncer.pid
listen_addr=*
listen_port=<%= node['pgbouncer']['port'] %>
user=postgres
auth_file=/etc/pgbouncer/userlist.txt
auth_type=trust
pool_mode=session
min_pool_size=10
default_pool_size=50
reserve_pool_size=0
reserve_pool_timeout=1.0
idle_transaction_timeout=0
max_client_conn=150
server_lifetime=300
server_idle_timeout=60
log_connections=0
log_disconnections=0
stats_period=3600
stats_users=postgres
admin_users=musicbrainz_user
