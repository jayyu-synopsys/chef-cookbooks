# This file allows you to reconfigure the CAA-admin site. Commented values
# indicate the default value.
cover-art-archive
{
  # The exchange to redeliver any failures to to try them again
  #retry-exchange = "cover-art-archive"

  # The queue to listen to for failures
  #failure-queue "cover-art-archive.failed"

  # The host running RabbitMQ
  host = "<%= node['caa-indexer']['rabbitmq']['host'] %>"

  # The username/password to connect to RabbitMQ with
  username = "<%= node['caa-indexer']['rabbitmq']['user'] %>"
  password = "<%= node['caa-indexer']['rabbitmq']['password'] %>"

  # The virtual host containing CAA queues
  vhost = "<%= node['caa-indexer']['rabbitmq']['vhost'] %>"
}
